<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Define your custom text appearance -->
    <style name="CustomTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">15sp</item>
    </style>

<!--    round layout-->
    <style name="fab_3_rounded">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <style name="CustomButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/orange</item>
    </style>


    <style name="CustomDatePickerDialog" parent="ThemeOverlay.AppCompat.Dialog">
        <item name="colorAccent">@color/orange</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:colorControlActivated">@color/orange</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/black</item>
        <item name="android:buttonBarButtonStyle">@style/CustomButtonStyle</item>
    </style>

    <style name="CustomAlertDialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="colorAccent">@color/white</item>
        <item name="android:windowBackground">@color/black</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/PositiveButton</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/NegativeButton</item>
    </style>

    <style name="PositiveButton" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="NegativeButton" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/white</item>
    </style>


</resources>